{
  "name": "@plasius/gpu-lock-free-queue",
  "version": "0.2.1",
  "description": "WebGPU lock-free MPMC ring queue with sequence counters.",
  "type": "module",
  "sideEffects": false,
  "private": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "legal"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./queue.wgsl": "./dist/queue.wgsl",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup && cp src/queue.wgsl dist/queue.wgsl",
    "demo": "python3 -m http.server",
    "test": "npm run test:unit",
    "test:unit": "node --test",
    "test:e2e": "npx playwright install chromium && playwright test",
    "test:coverage": "c8 --reporter=lcov --reporter=text node --test"
  },
  "keywords": [
    "webgpu",
    "lock-free",
    "mpmc",
    "queue",
    "ring-buffer",
    "sequence-counter",
    "gpu",
    "compute",
    "concurrency",
    "plasius"
  ],
  "author": "Plasius LTD <development@plasius.co.uk>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "c8": "^10.1.3",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/gpu-lock-free-queue.git"
  },
  "bugs": {
    "url": "https://github.com/Plasius-LTD/gpu-lock-free-queue/issues"
  },
  "homepage": "https://github.com/Plasius-LTD/gpu-lock-free-queue#readme",
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/c/plasiusltd/membership"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ]
}
